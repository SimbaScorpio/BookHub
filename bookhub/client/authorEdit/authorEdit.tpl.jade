div.pusher
	div.blank-top(id='top')
	div.ui.page.grid
		div.ui.thirteen.wide.column
			form.ui.segment
				div.chapter-info-text
					div.ui.black.ribbon.label 《{{chapter.name}}》
					h2 第{{chapter.index}}章
				div.chapter-info-text
					div.ui.dividing.header 章节介绍
					div.ui.form
						div.field.title
							p 章节标题:
							input(name='title' placeholder='Title...' value='{{chapter.title}}')
						div.field.summary
							p 章节梗概/修改声明
							textarea(name='summary' placeholder='Introduction...') {{chapter.summary}}
				div.chapter-content-text
					div.ui.dividing.header 章节文本
					textarea(name='content' placeholder='开始章节...') {{chapter.content}}
					div.ui.bottom.attached.teal.button.submit-btn 提交
				div.ui.small.modal.confirm-publish-modal
					div.content
						h2 是否发布本章节？
					div.actions
						div.ui.black.button 取消
						input.ui.positive.right.button(type='submit' value='确定')
		div.ui.three.wide.column.vertical.menu.pull-request-list
			div.item
				div.ui.center.aligned.header 献策者
			each puller
				a.item(id='{{user._id}}')
					if pullerPhoto
						img.ui.avatar.image(src="/userphoto-img/{{pullerPhoto.copies.userphoto.key}}")
					else
						img.ui.avatar.image(src="/img/default-userphoto.jpg")
					span {{user.profile.pseudonym}}
					if isMerge
						i.green.checkmark.icon
	div.blank-bottom

div.ui.dimmer.modals.page
	div.ui.standard.modal.contribute-brief-modal
		i.close.icon
		div.header 修改声明
		div.content
			div.ui.medium.image
			div.description
				div.contribute-summary
		div.actions
			div.ui.black.button 取消
			div.ui.positive.right.button 全文
	div.ui.standard.modal.contribute-detail-modal
		i.close.icon
		div.header 全文
		div.content
			div.ui.center.aligned.header 第?章
			div.contribute-content
		div.actions
			div.ui.black.button 取消
			div.ui.positive.right.button 采纳

	div.ui.small.modal.success-publish-modal
		div.content
			h2 章节发布成功！
		div.actions
			input.ui.positive.right.button(value='确定')