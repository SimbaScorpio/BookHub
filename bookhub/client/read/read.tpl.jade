div.pusher.read-pusher
	div.ui.raised.segment
		div.container
			div.author-info
				if authorPhoto
					img.ui.floated.left.image.authorphoto(src="/userphoto-img/{{authorPhoto.copies.userphoto.key}}")
				else
					img.ui.floated.left.image.authorphoto(src="/img/default-userphoto.jpg")

				div.author-text
					div.authorname
						h1 {{author.profile.pseudonym}}
					div.self-intro
						p {{author.profile.introduction}}
					div.chapter-intro
						p {{chapter.summary}}
	
	div.ui.two.column.page.grid
		div.thirteen.wide.column.left-grid
			div.ui.raised.segment.chapter-content
				div.ui.black.ribbon.label 第{{chapter.index}}章
				div.chapter-toolbar
					i.users.large.icon.tool(data-content='Contributors' data-variation='large inverted' data-position='top center')
					span {{contributorNumber}}
					i.heart.large.icon.tool(data-content='Like?' data-variation='large inverted' data-position='top center')
					span {{chapter.like}}
					i.bookmark.large.icon.tool(data-content="Mark this page?" data-variation='large inverted' data-position='top center')
				div.chapter-title
					h2 {{chapter.title}}
				div.chapter-text
					div {{chapter.content}}
		div.three.wide.column.right-grid
			div.ui.raised.segment
				div.ui.center.aligned.header 贡献者
			div.ui.raised.segment
				div.ui.divided.list
					each contributor
						div.item
							if contributorPhoto
								img.ui.avatar.image(src="/userphoto-img/{{contributorPhoto.copies.userphoto.key}}")
							else
								img.ui.avatar.image(src="/img/default-userphoto.jpg")
							div.content
								a.header {{user.profile.pseudonym}}
	
	div.ui.column.page.grid
		div.sixteen.wide.column
			div.ui.raised.segment
				div.ui.minimal.comments
					each reviewer
						div.comment
							a.avatar
								if reviewerPhoto
									img(src="/userphoto-img/{{reviewerPhoto.copies.userphoto.key}}")
								else
									img.ui.avatar.image(src="/img/default-userphoto.jpg")
							div.content
								a.author {{name}}
								div.metadata
									span.date {{createAt}}
								div.text
									p {{content}}
								div.actions
									a.reply Reply
					form.ui.reply.form
						div.field
							textarea
						div.ui.blue.labeled.submit.icon.button
							i.icon.edit
							p Add Reply
